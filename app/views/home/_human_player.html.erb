<div class="hand <%= @players[3] %>">
  <div class="row">
    <div class="large-2 columns text-center">
      <div class="avatar" style="background: #fff url(/assets/<%=  @players[3].downcase.tr(" " , "-") %>.jpg) no-repeat top center; background-size: auto 100%;"></div>
      <span class="player-name"><%= @players[3] %></span>
    </div>
  </div>
    
  <div class="row small-up-2 medium-up-3 large-up-4">
    <% @game.hands[3].hand_cards.each do |card| %>
      <div class="column column-block">
        <div class="card">
          <div class="card-image float-center">
            <img src="/assets/cards/<%= card.to_s.tr(" ","-") %>.png">
          </div>
          <div class="card-section float-center">
            <%=link_to "Karte spielen", home_index_path, class: "button" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  
  </div>
</div>
